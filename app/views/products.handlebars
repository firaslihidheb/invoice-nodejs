<div class="container">
    <div class="col-md-6">
        <h2>Contrats</h2>
    </div>
    <div class="col-md-6">
        <div class="add_more_button add_new_product" style="width: 124px"><i class="fa fa-plus" aria-hidden="true"></i>
            Ajouter un nouveau contract</div>
        <div class="remove_more_button remove_new_product" style="width: 124px; display: none"><i class="fa fa-times"
                aria-hidden="true"></i> Cancel</div>
    </div>
</div>
<div class="container">
    <form class="add-product-form" style="display: none">

        <h4 class="color-green">NEW CONTRACT</h4>
        <div class="row m-t-15">
            <div class="col-md-6">
                <label>Client</label>
                <select class="form-control" name="customer_id" id="customer_id" required="required">

                </select>
            </div>
            <div class="col-md-6">
                <label>Collaborator</label>
                <select class="form-control" name="collaborateur_id" id="collaborateur_id" required="required">

                </select>
            </div>
        </div>
        <div class="row m-t-15">
            <div class="col-md-6">
                <label>Start Date</label>
                <input type="date" class="form-control" name="start_date" required />
            </div>
            <div class="col-md-6">
                <label>End Date</label>
                <input type="date" class="form-control" name="end_date" />
            </div>
        </div>
        <div class="row m-t-15">
            <div class="col-md-6">
                <label>Numéro contrat</label>
                <input type="text" class="form-control" placeholder="Numéro de contract" name="numero_contrat"
                    maxlength="45" required />
            </div>
            <div class="col-md-6">
                <label>TJM (in €)</label>
                <input type="text" class="form-control" placeholder=" taux journalier de la prestation " name="tjm"
                    required />
            </div>
        </div>
        <div class="row m-t-15">
            <div class="col-md-6">
                <label>Numéro de commande Client</label>
                <input type="text" class="form-control" placeholder="Numéro de commande Client" name="client_order_number"
                    maxlength="10" />
            </div>

        </div>
        <div class="contract_alert_div alert" style="display: none"></div>
        <button type="submit" class="btn submit-btn m-t-15">Submit</button>
    </form>

    <hr />
    <table id="contract-table" class="display:none" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Numéro contrat</th>
                <th>Raison sociale du client</th>
                <th>Nom et prénom du collaborateur</th>
                <th>TJM</th>
                <th>Date de début du contrat</th>
                <th>Date de fin de contrat</th>
                <th>Numéro de commande Client</th>
            </tr>
        </thead>
    </table>
    <div class="no_data_found"></div>
</div>
