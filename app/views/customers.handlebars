<div class="container">
  <div class="col-md-6">
    <h2>Clients</h2>
  </div>
  <div class="col-md-6">
    <div class="add_more_button add_new_customer" style="width: 124px"><i class="fa fa-plus" aria-hidden="true"></i>
      Ajouter un nouveau client
    </div>
    <div class="remove_more_button remove_new_customer" style="width: 124px; display: none"><i class="fa fa-times"
        aria-hidden="true"></i>
      Cancel
    </div>
  </div>
